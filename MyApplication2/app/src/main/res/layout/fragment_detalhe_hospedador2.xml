<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bottom_border">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Limite de Pets Hospedados:"
                android:textSize="16dp"
            />

            <TextView
                android:id="@+id/fragment_hosp_detalhe_limitePets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:singleLine="true"
                android:text="10"
                android:textSize="16dp"
            />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Tipo de Supervisão:"
                android:textSize="16dp"
            />

            <TextView
                android:id="@+id/fragment_hosp_detalhe_tipoSupervisao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:singleLine="true"
                android:text="10"
                android:textSize="16dp"
            />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/bottom_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Cuida de:"
                android:textSize="16dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoFilhote"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Filhotes">

            </CheckBox>

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoIdoso"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Idosos">

            </CheckBox>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoMacho"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Machos">

            </CheckBox>

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoFemea"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Fémeas">

            </CheckBox>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoAnimaisPequenos"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Animais Pequenoes">

            </CheckBox>

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoAnimaisGrandes"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Animais Grandes">

            </CheckBox>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoCastrado"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Castrados">

            </CheckBox>

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoAnimaisExoticos"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Animais Exóticos">

            </CheckBox>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/bottom_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Espécies que cuida:"
                android:textSize="16dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoCachorro"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Cachorros">

            </CheckBox>

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoGato"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Gatos">

            </CheckBox>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoRepteis"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Répteis">

            </CheckBox>

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoAves"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Aves">

            </CheckBox>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoAnimaisMamiferos"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Mamíferos">

            </CheckBox>

            <CheckBox
                android:id="@+id/fragment_hosp_detalhe_restricaoAnimaisPeixes"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Peixes">

            </CheckBox>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

