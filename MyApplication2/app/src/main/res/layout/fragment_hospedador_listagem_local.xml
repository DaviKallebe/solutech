<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmento_hospedador_local"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/white"
    tools:context=".HospedadorListagemDetalheLocalFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/fragmento_hospedador_local_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/home_512"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_border"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Rua:"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/fragmento_hospedador_local_rua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex: Rua do Comércio"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_border"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N°:"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/fragmento_hospedador_local_numero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="1090"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_border"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Bairro:"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/fragmento_hospedador_local_bairro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex: Novo Aleixo/Cidade de Deus/etc"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Comp:"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/fragmento_hospedador_local_complemento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ex: Cond. Aristocrata"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_border"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="Cidade:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fragmento_hospedador_local_cidade"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:hint="Ex: Manaus/Sao Paulo/etc"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Estado:"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/fragmento_hospedador_local_estado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Ex: AM"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_border"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Tipo de Residência:"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/fragmento_hospedador_local_tipo_residencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex: Casa/Apt/etc"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textSize="16sp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Descrição e Observações:"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/fragmento_hospedador_local_descricao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border"
                        android:hint="Ex: Ampla área externa, Residencia Cimentada, etc"
                        android:inputType="textMultiLine"
                        android:padding="12dp"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>