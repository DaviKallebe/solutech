<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            tools:context=".UsuarioPerfilFragment"
            android:id="@+id/fragment_usuario_perfil"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" >

            <RelativeLayout
                android:id="@+id/layout_image_perfil"
                android:layout_width="wrap_content"
                android:layout_height="128dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_perfil"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/mob_user_175" />

            </RelativeLayout>

            <View
                android:id="@+id/line_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/layout_image_perfil"
                android:visibility="invisible"/>

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Rua:"
                            android:textSize="16dp" />


                        <TextView
                            android:id="@+id/localDetalheRua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:hint="Ex: Rua do Comércio"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N°:"
                            android:textSize="16dp" />


                        <TextView
                            android:id="@+id/localDetalheNumero"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="1090"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="Bairro:"
                            android:textSize="16dp"/>


                        <TextView
                            android:id="@+id/localDetalheBairro"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:padding="12dp"
                            android:textSize="16dp"
                            android:hint="Ex: Novo Aleixo/Cidade de Deus/etc"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Comp:"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/localDetalheComp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex: Cond. Aristocrata"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textSize="16dp" />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:text="Cidade:"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/localDetalheCidade"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:hint="Ex: Manaus/Sao Paulo/etc"
                        android:singleLine="true"
                        android:padding="12dp"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="Estado:"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/localDetalheEstado"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ex: AM"
                        android:singleLine="true"
                        android:padding="12dp"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Residência:"
                            android:textSize="16dp" />


                        <TextView
                            android:id="@+id/localDetalheTipoResidencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:hint="Ex: Casa/Apt/etc"
                            android:textSize="16dp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Descrição e Observações:"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/localDetalheDescricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ex: Ampla área externa, Residencia Cimentada, etc"
                            android:inputType="textMultiLine"
                            android:padding="12dp"
                            android:textSize="16dp"
                            android:background="@drawable/edittext_border"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

</LinearLayout>

