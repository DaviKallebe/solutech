<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".UsuarioPerfilFragment"
        android:id="@+id/fragment_usuario_perfil"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <RelativeLayout
            android:id="@+id/layout_image_perfil"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_perfil"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/mob_user_175" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_perfil_camera"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_image_camera"
                app:civ_fill_color="@color/colorCameraBackground"/>
        </RelativeLayout>

        <View
            android:id="@+id/line_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/layout_image_perfil"
            android:visibility="invisible"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/fragment_pet_cadastro_nome"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idade(anos):"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/fragment_pet_cadastro_idade"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />


        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo:"
                android:textSize="16dp"
                android:layout_gravity="center"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <RadioButton
                        android:id="@+id/fragment_pet_cadastro_macho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:text="Macho" />

                    <RadioButton
                        android:id="@+id/fragment_pet_cadastro_femea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Fêmea" />

                </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="Peso(KG):"
                android:textSize="16dp"
                />


            <EditText
                android:id="@+id/fragment_pet_cadastro_peso"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />



        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Espécie:"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/fragment_pet_cadastro_especie"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Ex: Gato"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raça:"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/fragment_pet_cadastro_raca"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Ex: Siames"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição:"
            android:textSize="16dp"
            />


        <EditText
            android:id="@+id/fragment_pet_cadastro_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adicione uma observação aqui"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="16dp" />



    </LinearLayout>

    <Button
        android:id="@+id/fragment_pet_cadastro_confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cadastrar" />


</LinearLayout>

