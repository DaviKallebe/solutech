<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".UsuarioPerfilFragment"
        android:id="@+id/fragment_usuario_perfil"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <RelativeLayout
            android:id="@+id/layout_image_perfil"
            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_perfil"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/mob_user_175" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_perfil_camera"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_image_camera"
                app:civ_fill_color="@color/colorCameraBackground"/>
        </RelativeLayout>

        <View
            android:id="@+id/line_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/layout_image_perfil"
            android:visibility="invisible"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Rua:"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/petCadRua"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:singleLine="true"
                android:hint="Ex: Rua do Comércio"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N°:"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/petCadNumero"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />


        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Bairro:"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/petCadBairro"
                android:layout_height="wrap_content"
                android:layout_width="310dp"
                android:singleLine="true"
                android:padding="12dp"
                android:textSize="16dp"
                android:hint="Ex: Novo Aleixo/Cidade de Deus/etc"
                />



        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Comp:"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/petCadComp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Ex: Cond. Aristocrata"
                android:padding="12dp"
                android:singleLine="true"
                android:textSize="16dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cidade:"
            android:textSize="16dp"
            />


        <EditText
            android:id="@+id/petCadCidade"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Ex: Manaus/Sao Paulo/etc"
            android:singleLine="true"
            android:padding="12dp"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Estado:"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/petCadEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ex: AM"
            android:singleLine="true"
            android:padding="12dp"
            android:textSize="16dp" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_logradouro_cadastro_etapa1_arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/fab_margin"
        android:scaleType="center"
        android:src="@drawable/ic_float_button_foward"
        android:visibility="visible"
        android:tint="#ffffff"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:elevation="0dp"/>


</LinearLayout>

