<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".UsuarioPerfilFragment"
    android:id="@+id/fragment_usuario_perfil"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_image_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_perfil"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/mob_user_175"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_perfil_camera"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_image_camera"
            app:civ_fill_color="@color/colorCameraBackground"
            app:layout_constraintBottom_toBottomOf="@+id/image_perfil"
            app:layout_constraintStart_toStartOf="@+id/image_perfil" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/layout_image_perfil"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/fragment_usuario_perfil_anuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/line_one"
        android:background="@color/colorAccent"
        android:text="Deseja iniciar a parceria conosco?\n Comece clicando aqui"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_perfil_listagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_usuario_perfil_anuncio"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:overScrollMode="never" />

</RelativeLayout>