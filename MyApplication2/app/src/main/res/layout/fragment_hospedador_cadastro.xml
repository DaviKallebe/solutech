<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_hospedador_cadastro_etapa1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HospedadorCadastroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageButton

            android:id="@+id/imageButton"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_image_likes" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <EditText
                android:id="@+id/editNome"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:inputType="text"

                />

            <EditText
                android:id="@+id/editSobrenome"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:hint="Sobrenome"
                android:inputType="text"
    />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Órgão Emissor" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <EditText
            android:id="@+id/editRG"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:hint="RG"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <EditText
            android:text="2556866-3"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtOrgaoEmissor"/>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        >
        <EditText
            android:id="@+id/editCPF"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="CPF"
            android:textAlignment="center"
            android:text="01689498226"
            />

        <EditText
            android:id="@+id/editTelefone"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Telefone"
            android:layout_marginLeft="12dp"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Próximo"
        android:id="@+id/btnProximo"/>

    </LinearLayout>
</RelativeLayout>
