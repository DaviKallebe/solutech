<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tipo de Residência:"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/petCadTipoResidencia"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:singleLine="true"
                android:hint="Ex: Casa/Apt/etc"
                android:textSize="16dp" />


        </LinearLayout>





    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Descrição e Observações:"
                android:textSize="16dp" />


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:id="@+id/petCadDescricao"
                android:layout_width="match_parent"
                android:layout_height="277dp"
                android:hint="Ex: Ampla área externa, Residencia Cimentada, etc"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textSize="16dp"
                android:background="@drawable/edittext_border"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnCadastroLogradouro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cadastrar" />


</LinearLayout>

